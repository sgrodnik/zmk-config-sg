#include <dt-bindings/zmk/matrix_transform.h>
#include "sg1-layouts.dtsi"

&physical_layout0 {
    transform = <&default_transform>;
};

/ {
    chosen {
        zmk,kscan = &kscan0;
        //zmk,matrix-transform = &default_transform;
        zmk,physical-layout = &physical_layout0;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
        map = <
    RC(0,9) RC(0,8) RC(0,7) RC(0,6) RC(0,5)                 RC(0,4) RC(0,3) RC(0,2) RC(0,1) RC(0,0)
    RC(1,9) RC(1,8) RC(1,7) RC(1,6) RC(1,5)                 RC(1,4) RC(1,3) RC(1,2) RC(1,1) RC(1,0)
    RC(2,9) RC(2,8) RC(2,7) RC(2,6) RC(2,5)                 RC(2,4) RC(2,3) RC(2,2) RC(2,1) RC(2,0)
            RC(3,8) RC(3,7) RC(3,6) RC(3,5) RC(3,9) RC(3,0) RC(3,4) RC(3,3) RC(3,2) RC(3,1)
            >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;

        diode-direction = "col2row";

        col-gpios
            = <&gpio0 31 GPIO_ACTIVE_HIGH>
            , <&gpio0 29 GPIO_ACTIVE_HIGH>
            , <&gpio0  2 GPIO_ACTIVE_HIGH>
            , <&gpio1 15 GPIO_ACTIVE_HIGH>
            , <&gpio1 13 GPIO_ACTIVE_HIGH>
            , <&gpio1 11 GPIO_ACTIVE_HIGH>
            , <&gpio0 10 GPIO_ACTIVE_HIGH>
            , <&gpio0  9 GPIO_ACTIVE_HIGH>
            , <&gpio1  7 GPIO_ACTIVE_HIGH>
            , <&gpio1  2 GPIO_ACTIVE_HIGH>
            ;

        row-gpios
            = <&gpio0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio1  4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio1  6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio1  1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };

    aliases {
        led-red = &led0;
        led-green = &led1;
        led-blue = &led2;
    };

    leds {
        compatible = "gpio-leds";
        status = "okay";
        led0: led_0 { gpios = <&gpio1  0 GPIO_ACTIVE_HIGH>; };
        led1: led_1 { gpios = <&gpio0 24 GPIO_ACTIVE_HIGH>; };
        led2: led_2 { gpios = <&gpio0 22 GPIO_ACTIVE_HIGH>; };
    };
};
